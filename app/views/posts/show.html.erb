<h1 class="title">
  <%= @post.title %>
</h1>
<p class="date">
  Submitted <%= time_ago_in_words(@post.created_at) %> Ago
</p>
<p class="body">
  <%= @post.body %>
</p>

<% if @reviews.blank? %>
	<h3>No comments just yet, would you like to add the first!</h3>
	<%= link_to "Write a Comment", new_post_review_path(@post), class: "btn btn-danger" %>
<% else %>
	<em><%= "#{@reviews.length} comments" %></em>
	<% @reviews.each do |review| %>
		<p><%= review.comment %></p>
	<% end %>
<% end %>
<%= link_to "Write a Comment", new_post_review_path(@post) %> |
<% if user_signed_in? %>
	<%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>
<%= link_to 'Back', posts_path %>
